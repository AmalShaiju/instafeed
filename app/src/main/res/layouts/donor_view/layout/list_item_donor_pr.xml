<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activities.donor_view.activities.DonorViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="false">

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:columnCount="2">

                <ImageView
                    android:id="@+id/donor_pr_imgItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxWidth="100dp"
                    android:maxHeight="200dp"
                    android:src="@drawable/table"
                    app:layout_rowWeight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:layout_columnWeight="1">

                    <TextView
                        android:id="@+id/donor_pr_lblLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/roboto"
                        android:text="1222 Natanial Crescent, Burlington"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_columnWeight="2" />

                    <androidx.gridlayout.widget.GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:columnCount="2"
                        app:rowCount="4"
                        app:useDefaultMargins="false">

                        <TextView
                            android:id="@+id/donor_pr_plcClaimedBy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="Claimed By:"
                            app:layout_columnWeight="1" />

                        <TextView
                            android:id="@+id/donor_pr_lblClaimedBy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="YMCA"
                            android:textColor="@color/success"
                            app:layout_columnWeight="1" />

                        <TextView
                            android:id="@+id/donor_pr_plcPostedOn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="Posted On:"
                            app:layout_columnWeight="1" />

                        <TextView
                            android:id="@+id/donor_pr_lblPostedOn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="21-09-2021 3:35pm"
                            app:layout_columnWeight="1" />

                        <TextView
                            android:id="@+id/donor_pr_plcClaimedOn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="Claimed On:"
                            app:layout_columnWeight="1" />

                        <TextView
                            android:id="@+id/donor_pr_lblClaimedOn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="21-09-2021 4:45pm"
                            app:layout_columnWeight="1" />

                        <TextView
                            android:id="@+id/donor_pr_plcPickedUpOn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pickedup On:"
                            app:layout_columnWeight="1" />

                        <TextView
                            android:id="@+id/donor_pr_lblPickedUpOn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="21-09-2021 6:45pm"
                            app:layout_columnWeight="1" />

                    </androidx.gridlayout.widget.GridLayout>

                </LinearLayout>
            </androidx.gridlayout.widget.GridLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>